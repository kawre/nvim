{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.completion.callSnippet": "Replace",
      "Lua.diagnostics.globals": [
        "vim",
        "spec"
      ],
      "Lua.runtime.version": "LuaJIT",
      "Lua.format.enable": false
    },
    "jdtls": {
      "java.configuration.runtimes": [
        {
          "name": "JavaSE-21",
          "path": "/usr/lib/jvm/java-21-openjdk",
          "default": true
        }
      ]
    }
  }
}
